    public double complementryFilter(){
    	
    	double alpha = 98;
    	double gyro_angle_x = getGyro();
    	double accel_angle_x = getAccelerometer();
    	
		return alpha*gyro_angle_x + (1.0 - alpha)*accel_angle_x;
    	
    }
