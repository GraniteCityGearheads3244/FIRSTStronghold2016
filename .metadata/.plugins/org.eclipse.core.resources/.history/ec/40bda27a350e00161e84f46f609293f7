        //return (Robot.driveTrain.my_Get_Left_Front_Encoder() > m_Distance);
        
           return (forward && (Robot.driveTrain.my_Get_Left_Front_Encoder() > m_Distance)) || //or
        		(!forward && (Robot.driveTrain.my_Get_Left_Front_Encoder() < m_Distance));
        
    }

